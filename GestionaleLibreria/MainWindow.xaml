<Window x:Class="GestionaleLibreria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionale Libreria" Height="450" Width="800" Background="#F5F5F5">
    <Grid Margin="20">
        <!-- Intestazione -->
        <TextBlock Text="Gestione Libri" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20" Foreground="#333333"/>

        <!-- DataGrid per visualizzare i libri -->
        <DataGrid x:Name="LibriDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,0,10,60" AutoGenerateColumns="True" Height="250" BorderBrush="#D3D3D3" BorderThickness="1">
            <DataGrid.Resources>
                <!-- Stile per le righe del DataGrid -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#D3D3D3"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="Height" Value="35"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <!-- Bottoni -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
            <Button Content="Aggiungi Libro" Width="120" Height="40" Margin="10" Click="AggiungiLibro_Click" Background="#4CAF50" Foreground="White" BorderBrush="Transparent" BorderThickness="1"/>
            <Button Content="Modifica Libro" Width="120" Height="40" Margin="10" Click="ModificaLibro_Click" Background="#2196F3" Foreground="White" BorderBrush="Transparent" BorderThickness="1"/>
            <Button Content="Elimina Libro" Width="120" Height="40" Margin="10" Click="EliminaLibro_Click" Background="#F44336" Foreground="White" BorderBrush="Transparent" BorderThickness="1" />
        </StackPanel>

        <!-- Footer -->
        <StatusBar VerticalAlignment="Bottom" Background="#F5F5F5" BorderBrush="#D3D3D3" BorderThickness="0,1,0,0">
            <StatusBarItem Content="Pronto" Foreground="#333333"/>
        </StatusBar>
    </Grid>
</Window>

