<Window x:Class="GestionaleLibreria.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionale Libreria" Height="500" Width="800">
    <Grid>
        <!-- Utente Loggato -->
        <TextBlock x:Name="UtenteTextBlock" FontSize="14" 
                   HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <!-- Logout -->
        <Button Content="🚪 Logout" Click="BtnLogout_Click"
                Width="100" Height="35" Background="#F44336" Foreground="White"
                FontWeight="Bold" Cursor="Hand" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>

        <!-- Pulsanti Principali -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="GestioneLibriButton" Content="📖 Gestione Libri" Click="GestioneLibri_Click"
                    Width="250" Height="50" Background="#4CAF50" Foreground="White"
                    FontSize="16" FontWeight="Bold" Margin="10"/>

            <Button Content="👤 Gestione Clienti" Click="GestioneClienti_Click"
                    Width="250" Height="50" Background="#FF9800" Foreground="White"
                    FontSize="16" FontWeight="Bold" Margin="10"/>

            <Button Content="💰 Registra Vendita" Click="RegistraVendita_Click"
                    Width="250" Height="50" Background="#9C27B0" Foreground="White"
                    FontSize="16" FontWeight="Bold" Margin="10"/>

            <!-- Pulsante Report (aggiunto) -->
            <Button Content="📊 Genera Report" Click="GeneraReport_Click"
                    Width="250" Height="50" Background="#03A9F4" Foreground="White"
                    FontSize="16" FontWeight="Bold" Margin="10"/>

            <Button x:Name="GestioneMagazzinoButton" Content="📦 Gestione Magazzino" Click="GestioneMagazzino_Click"
                    Width="250" Height="50" Background="#E91E63"
                    Foreground="White" FontSize="16" FontWeight="Bold" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
