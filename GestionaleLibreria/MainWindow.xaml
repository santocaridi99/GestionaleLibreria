<Window x:Class="GestionaleLibreria.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionale Libreria" Height="500" Width="800" Background="#F5F5F5">
    <Grid Margin="20">
        <!-- Intestazione -->
        <TextBlock Text="Gestionale Libreria" FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,30,0,0" Foreground="#333333"/>

        <!-- Pannello centrale per la navigazione -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Gestione Libri" Width="200" Height="40" Margin="10" Click="GestioneLibri_Click" 
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="Gestione Clienti" Width="200" Height="40" Margin="10" Click="GestioneClienti_Click" 
                    Background="#FF9800" Foreground="White"/>
            <Button Content="Registra Vendita" Width="200" Height="40" Margin="10" Click="RegistraVendita_Click" 
                    Background="#9C27B0" Foreground="White"/>
            <Button Content="Genera Report" Width="200" Height="40" Margin="10" Click="GeneraReport_Click" 
                    Background="#03A9F4" Foreground="White"/>
            <Button Content="Gestione Magazzino" Width="200" Height="40" Margin="10" Click="GestioneMagazzino_Click" 
                    Background="#E91E63" Foreground="White"/>
        </StackPanel>

        <!-- Footer -->
        <StatusBar VerticalAlignment="Bottom" Background="#F5F5F5" BorderBrush="#D3D3D3" BorderThickness="0,1,0,0">
            <StatusBarItem Content="Pronto" Foreground="#333333"/>
        </StatusBar>
    </Grid>
</Window>
