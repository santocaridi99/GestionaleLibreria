<Window x:Class="GestionaleLibreria.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="350" Background="#F5F5F5"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,30,0,0">
            <TextBlock Text="🔐 Login" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#333333" Margin="0,0,0,20"/>

            <Label Content="Username" FontWeight="Bold"/>
            <TextBox x:Name="UsernameTextBox" Width="250" Height="30"/>

            <Label Content="Password" FontWeight="Bold" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Height="30"/>

            <TextBlock x:Name="ErroreTextBlock" Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="0,5,0,0"/>

            <Button Content="🔑 Accedi" Click="Login_Click"
                    Width="250" Height="40" Background="#4CAF50" Foreground="White"
                    FontSize="16" FontWeight="Bold" Margin="20,10,0,0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
