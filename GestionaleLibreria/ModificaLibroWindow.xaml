<Window x:Class="GestionaleLibreria.WPF.ModificaLibroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifica Libro" Height="400" Width="400" Background="#F9F9F9">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <!-- Intestazione -->
            <TextBlock Text="Modifica Libro" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333333"/>

            <!-- Campo per Titolo -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Titolo:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TitoloTextBox" Width="200" Height="25"/>
            </StackPanel>

            <!-- Campo per Autore -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Autore:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="AutoreTextBox" Width="200" Height="25"/>
            </StackPanel>

            <!-- Campo per ISBN -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="ISBN:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="ISBNTextBox" Width="200" Height="25"/>
            </StackPanel>

            <!-- Campo per Prezzo -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Prezzo:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="PrezzoTextBox" Width="200" Height="25"/>
            </StackPanel>

        
        </StackPanel>

        <!-- Bottoni per Salva e Annulla -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="Salva" Width="100" Margin="10" Click="Salva_Click" 
                    Background="#4CAF50" Foreground="White"/>
            <Button Content="Annulla" Width="100" Margin="10" Click="Annulla_Click" 
                    Background="#F44336" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
