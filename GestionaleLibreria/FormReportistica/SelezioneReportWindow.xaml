<Window x:Class="GestionaleLibreria.WPF.FormReportistica.SelezioneReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selezione Report e Analisi Grafica" Height="700" Width="900" Background="#F5F5F5"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                <TextBlock Text="📊 Seleziona il Report" FontSize="22" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333333"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="📦 Report Magazzino" Click="ApriReportMagazzino_Click"
                            Width="280" Height="50" Background="#E91E63" Foreground="White"
                            FontSize="16" FontWeight="Bold" Margin="10"/>

                    <Button Content="💰 Report Vendite" Click="ApriReportVendite_Click"
                            Width="280" Height="50" Background="#03A9F4" Foreground="White"
                            FontSize="16" FontWeight="Bold" Margin="10"/>
                </StackPanel>

                <Button Content="👤 Report Clienti" Click="ApriReportClienti_Click"
                        Width="280" Height="50" Background="#FF9800" Foreground="White"
                        FontSize="16" FontWeight="Bold" Margin="10"/>

                <TextBlock Text="📊 Analisi Grafica" FontSize="22" FontWeight="Bold" Margin="0,20,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Grafico Vendite -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                        <TextBlock Text="📈 Vendite negli ultimi 6 mesi" FontSize="16" FontWeight="Bold" Margin="5"/>
                        <Image x:Name="GraficoVendite" Height="250" Width="380"/>
                    </StackPanel>

                    <!-- Grafico Libri più Venduti -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                        <TextBlock Text="📚 Libri più venduti" FontSize="16" FontWeight="Bold" Margin="5"/>
                        <Image x:Name="GraficoLibriVenduti" Height="250" Width="380"/>
                    </StackPanel>

                    <!-- Grafico Clienti più Attivi -->
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
                        <TextBlock Text="👤 Clienti più attivi" FontSize="16" FontWeight="Bold" Margin="5"/>
                        <Image x:Name="GraficoClientiAttivi" Height="250" Width="780"/>
                    </StackPanel>
                </Grid>

                <Button Content="🔄 Aggiorna Grafici" Click="GeneraGrafici_Click"
                        Width="250" Height="40" Background="#4CAF50" Foreground="White"
                        FontSize="14" FontWeight="Bold" Margin="10"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
