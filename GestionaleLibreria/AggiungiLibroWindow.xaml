<Window x:Class="GestionaleLibreria.AggiungiLibroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aggiungi Nuovo Libro" Height="350" Width="400">
    <Grid Margin="20">
        <!-- Titolo -->
        <TextBlock Text="Aggiungi Libro" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20" Foreground="#333333"/>

        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <!-- Label e TextBox per Titolo -->
            <StackPanel Orientation="Horizontal" Margin="10,10,10,5">
                <Label Content="Titolo" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="TitoloTextBox" Width="200" Height="30" BorderBrush="#D3D3D3" BorderThickness="1" Padding="5" />
            </StackPanel>

            <!-- Label e TextBox per Autore -->
            <StackPanel Orientation="Horizontal" Margin="10,10,10,5">
                <Label Content="Autore" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="AutoreTextBox" Width="200" Height="30" BorderBrush="#D3D3D3" BorderThickness="1" Padding="5"/>
            </StackPanel>

            <!-- Label e TextBox per Prezzo -->
            <StackPanel Orientation="Horizontal" Margin="10,10,10,5">
                <Label Content="Prezzo" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="PrezzoTextBox" Width="200" Height="30" BorderBrush="#D3D3D3" BorderThickness="1" Padding="5"/>
            </StackPanel>

            <!-- Label e TextBox per Quantità -->
            <StackPanel Orientation="Horizontal" Margin="10,10,10,5">
                <Label Content="Quantità" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="QuantitaTextBox" Width="200" Height="30" BorderBrush="#D3D3D3" BorderThickness="1" Padding="5"/>
            </StackPanel>
        </StackPanel>

        <!-- Pulsanti per Aggiungi e Annulla -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,20">
            <Button Content="Aggiungi" Width="100" Height="40" Margin="10" Background="#4CAF50" Foreground="White" BorderBrush="Transparent" BorderThickness="1" Click="AggiungiButton_Click"/>
            <Button Content="Annulla" Width="100" Height="40" Margin="10" Background="#F44336" Foreground="White" BorderBrush="Transparent" BorderThickness="1" Click="AnnullaAggiungi_Click"/>
        </StackPanel>
    </Grid>
</Window>
