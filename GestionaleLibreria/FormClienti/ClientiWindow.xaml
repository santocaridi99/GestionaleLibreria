<Window x:Class="GestionaleLibreria.WPF.ClientiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestione Clienti" Height="565" Width="650" Background="#ECEFF1"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical">

            <!-- Intestazione -->
            <TextBlock Text="👥 Gestione Clienti" FontSize="26" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#37474F"/>

            <!-- Contenitore con bordo arrotondato -->
            <Border Background="White" Padding="15" CornerRadius="10" BorderBrush="#B0BEC5" BorderThickness="1">
                <DataGrid x:Name="ClientiDataGrid" AutoGenerateColumns="False" Height="300" Margin="10"
                          BorderBrush="#D3D3D3" BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="📛 Nome" Binding="{Binding Nome}" Width="*"/>
                        <DataGridTextColumn Header="👤 Cognome" Binding="{Binding Cognome}" Width="*"/>
                        <DataGridTextColumn Header="📧 Email" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="📞 Telefono" Binding="{Binding Telefono}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Bottoni -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" RenderTransformOrigin="0.5,0.258">
                <Button Content="➕ Aggiungi Cliente" Width="180" Height="40" Margin="10"
                        Click="AggiungiCliente_Click" Background="#4CAF50" Foreground="White"
                        FontSize="14" FontWeight="Bold" Cursor="Hand"/>

                <Button Content="✏️ Modifica Cliente" Width="172" Height="40" Margin="10"
                        Click="ModificaCliente_Click" Background="#2196F3" Foreground="White"
                        FontSize="14" FontWeight="Bold" Cursor="Hand"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
