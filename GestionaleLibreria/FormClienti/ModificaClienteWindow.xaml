<Window x:Class="GestionaleLibreria.WPF.ModificaClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifica Cliente" Height="400" Width="400" Background="#ECEFF1"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical">

            <!-- Intestazione -->
            <TextBlock Text="✏️ Modifica Cliente" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#37474F"/>

            <!-- Campo Nome -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Nome:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="NomeTextBox" Width="200" Height="25"/>
            </StackPanel>

            <!-- Campo Cognome -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Cognome:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="CognomeTextBox" Width="200" Height="25"/>
            </StackPanel>

            <!-- Campo Email -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Email:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="EmailTextBox" Width="200" Height="25"/>
            </StackPanel>

            <!-- Campo Telefono -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Telefono:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="TelefonoTextBox" Width="200" Height="25"/>
            </StackPanel>

        </StackPanel>

        <!-- Bottoni -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="💾 Salva" Width="100" Margin="10" Click="Salva_Click"
                    Background="#2196F3" Foreground="White"/>
            <Button Content="❌ Annulla" Width="119" Margin="10" Click="Annulla_Click"
                    Background="#F44336" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
